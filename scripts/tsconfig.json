{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": false,
    "types": ["node"],
    "lib": ["ES2020"],
    "target": "ES2020"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

